  revision 2021-12-21 {
    description
      "Initial revision";
  }

  typedef locator-name {
    type string {
      length "1..58";
    }
    description
      "SRv6 locator name format";
  }

  typedef locator-len {
    type uint32 {
      range "32..112";
    }
    description
      "SRv6 locator len";
  }

  container srv6 {
    description
      "Segment Routing with IPv6 dataplane";

    container locators {
      description
        "Configure SRv6 locators parameters";

      container locators {
        description
          "Configure SRv6 table of locators";
        
        list locator {
          key "name";
          description
            "Configure a SRv6 locator";

          container prefix {
            description
              "Specify locator prefix value";

            leaf prefix {
              type inet:ip-prefix;
              description
                "IPv6 Prefix";
            }
          }
          
          leaf name {
            type locator-name;
            description
              "Locator name";
          }

          leaf status-up {
            type boolean;
          }

          leaf block-bits-length {
            type uint8;
          }

          leaf node-bits-length {
            type uint8;
          }

          leaf function-bits-length {
            type uint8;
          }

          leaf argument-bits-length {
            type uint8;
          }
        }
      }
    }
  }
}
